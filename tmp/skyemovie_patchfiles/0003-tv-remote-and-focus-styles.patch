+/* --- TV/Remote + Accessibility improvements --- */
+
+/* Hide the legacy access-gate UI (access codes are disabled). */
+#access-gate-section { display: none !important; }
+
+/* Make keyboard focus obvious (works well on Android TV remotes too). */
+:focus-visible {
+  outline: 3px solid var(--accent-color);
+  outline-offset: 3px;
+}
+
+/* Make "clickable" items focusable look/feel like TV UI */
+button, .media-card, .discover-arrow, a {
+  -webkit-tap-highlight-color: transparent;
+}
+
+body.tv-mode {
+  font-size: 18px;
+}
+body.tv-mode .nav-button { font-size: 1rem; padding: 12px 14px; }
+body.tv-mode .media-card:hover { transform: none; }
+body.tv-mode .media-card:focus-visible { transform: scale(1.03); }
